<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_toma_dec_maximax"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:text="MaxiMax"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorButtonText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_toma_dec_maximin"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_toma_dec_maximin"
            android:textAllCaps="false"
            android:text="MaxiMin"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorButtonText"
            app:layout_constraintTop_toBottomOf="@id/button_toma_dec_maximax"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_toma_dec_maxprob"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_toma_dec_maxprob"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:text="Maxima probabilidad\nPesimista"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorButtonText"
            app:layout_constraintTop_toBottomOf="@id/button_toma_dec_maximin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_toma_dec_hurwicz"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_toma_dec_hurwicz"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:text="Hurwicz"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorButtonText"
            app:layout_constraintTop_toBottomOf="@id/button_toma_dec_maxprob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_toma_dec_minimax"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:text="MiniMax"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorButtonText"
            app:layout_constraintTop_toBottomOf="@id/button_toma_dec_hurwicz"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_toma_dec_bayes"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:text="Bayes"
            android:background="@drawable/btn_round"
            android:textColor="@color/colorButtonText"
            app:layout_constraintTop_toBottomOf="@id/button_toma_dec_minimax"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>